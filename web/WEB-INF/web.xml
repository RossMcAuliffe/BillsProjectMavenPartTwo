<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.bsapp.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDAO.java</servlet-name>
        <servlet-class>com.bsapp.dao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomePageServlet</servlet-name>
        <servlet-class>com.bsapp.servlets.HomePageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Product</servlet-name>
        <servlet-class>com.bsapp.servlets.Product</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>com.bsapp.servlets.ProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.bsapp.servlets.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductServlet2</servlet-name>
        <servlet-class>com.bsapp.servlets.ProductServlet2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet2</servlet-name>
        <servlet-class>com.bsapp.servlets.CartServlet2</servlet-class>
    </servlet>
     <servlet>
        <servlet-name>DbInitServlet</servlet-name>
        <servlet-class>com.bsapp.utils.DbInitServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>com.bsapp.servlets.cart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePageServlet</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Product</servlet-name>
        <url-pattern>/Product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/ProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/CartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductServlet2</servlet-name>
        <url-pattern>/ProductServlet2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet2</servlet-name>
        <url-pattern>/CartServlet2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index_1.html</welcome-file>
    </welcome-file-list>
</web-app>
